.success-box{
  width:85%;
  height:700rpx;
  background:#ffffff;
  margin:0px auto;
  margin-top:100rpx;
  border-radius: 20rpx;
}

.success-img{
  width:150rpx;
  height:150rpx;
  margin:0px auto;
  padding-top:80rpx;
}

.success-img image{
  width:100%;
  height:100%;
}

.success-text{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  font-size:32rpx;
  margin-top:80rpx;
  color:#1f1f1f;
}

.success-text text{
  height:65rpx;
  line-height:65rpx;
}

.success-btn{
  width:544rpx;
  height:100rpx;
  line-height:100rpx;
  background:-webkit-linear-gradient(30deg, #fd5b1d, #fc4513);
  color:#ffffff;
  text-align: center;
  font-size:36rpx;
  border-radius: 48rpx;
  margin:0px auto;
  margin-top:80rpx;
}