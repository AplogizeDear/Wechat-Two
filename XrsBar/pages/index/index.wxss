}

/*侧边滑动*/

.page-top {
  position: fixed;
  top:0;
  width: 530rpx;
  background-color: #2b2f3a;
  z-index: 3;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
  margin-left: -750rpx;
  color: #fff;
  padding-left: 220rpx;
  padding-top: 20rpx;
  height:100%;
}
.slider-page{
  height:100%;
  overflow: hidden;
}
.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(0.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(0.8) translate(75%, 0%);
}

.slider-user {
  width: auto;
  height: 160rpx;
  display: flex;
}

.slider-user image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
}

.slider-user .user-name {
  height: 140rpx;
  line-height: 140rpx;
  width: 500rpx;
  padding-left: 60rpx;
  font-size:32rpx;
}

.slider-balance {
  margin-top: 40rpx;
}

.menu-list {
  width: 100%;
