.schedule-box {
  position: relative;
  width: 90%;
  background: #2b2f3a;
  display: flex;
  margin: 0px 5%;
  border-radius: 20rpx;
  margin-bottom: 120rpx;
  padding-bottom:50rpx;
}

.schedule-box .img-box {
  width: 188rpx;
  height: 246rpx;
  position: absolute;
  top: -56rpx;
  left: 28rpx;
}

.schedule-box .img-box image {
  width: 100%;
  height: 100%;
  display: block;
}

.schedule-box .text-box {
  display: flex;
  flex-direction: column;
  margin-left: 230rpx;
}

.schedule-box .text-box .title {
  line-height: 60rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #fff;
  overflow:hidden;
}

.schedule-box .text-box .price {
  margin-top: 45rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.schedule-box .text-box .date {
  color: #a2a8ba;
  font-size: 24rpx;
  padding-left: 30rpx;
}

