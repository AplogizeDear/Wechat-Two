  margin: 100rpx;
  position: fixed;
  Z-index: 1;
  bottom: 80rpx;
  right: -100rpx;
}

.menu-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2b2f3a;
  border-radius: 50rpx;
  margin: 10rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content:center;
}

.menu-btn image {
  width: 35rpx;
