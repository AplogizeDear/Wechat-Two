.qrcode-box{
  width:85%;
  height:900rpx;
  background:#ffffff;
  margin:0px auto;
  margin-top:100rpx;
  border-radius: 20rpx;
}

.logo-img{
  width:60rpx;
  height:100rpx;
  margin:0px auto;
  padding-top:80rpx;
}

.logo-img image{
  width:100%;
  height:100%;
}

.club-name{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  font-size:35rpx;
  margin-top:15rpx;
  color:#1f1f1f;
}

.bottom-text{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  color:#1f1f1f;
  text-align: center;
  font-size:33rpx;
  margin:0px auto;
  margin-top:30rpx;
}

.club-qrcode{
  width:400rpx;
  height:400rpx;
  margin:0px auto;
  padding-top:30rpx;
}

.club-qrcode image{
  width:100%;
  height:100%;
}