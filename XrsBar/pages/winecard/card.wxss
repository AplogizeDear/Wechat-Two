.alcohol-box{
  width:95%;
  min-height:150rpx;
  margin:0px auto;
  margin-top:35rpx;
  padding-bottom: 180rpx;
}
.alcohol-box .alcohol-items{
   width:100%;
   min-height:240rpx;
   background:#343741;
   border-radius:20rpx;
   padding-bottom:20rpx;
   margin-bottom:35rpx;
}
.alcohol-box .left-box{
  width:100%;
  min-height:240rpx;
}
.alcohol-box .alcohol-img{
  width:500rpx;
  height:200rpx;
  margin:10rpx;
  position: absolute;
}
.alcohol-detail{
  width:70%;
  min-height:100rpx;
  font-size:32rpx;
  margin-left:120rpx;
  padding-top:120rpx;
}
.alcohol-detail text{
  display:block;
  height:50rpx;
  line-height:50rpx;
}
.alcohol-box .time{
  color:#9298a9;
}
.alcohol-box .card-tip{
  color:#fc4513;
}
.right-box{
  position: relative;
}
.alcohol-box .card-type{
  min-width:100rpx;
  height:80rpx;
  line-height:80rpx;
  position: absolute;
  right:60rpx;
  top:-255rpx;
  font-size:33rpx;
  text-align: center;
}
.alcohol-box .right-circle{
  width:100rpx;
  height:80rpx;
  position: absolute;
  right:0rpx;
  bottom:-17rpx;
}
.take-box {
  width: 100%;
  height: 170rpx;
  line-height:170rpx;
  background: #2b2f3a;
  display:flex;
  align-items:center;
  justify-content:center;
  position: fixed;
  bottom:0rpx;
}

.take-box .take-btn {
  width: 80%;
  height: 100rpx;
  line-height:100rpx;
  border-radius: 50rpx;
  font-size:40rpx;
}