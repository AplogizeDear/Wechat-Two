page{
  padding-bottom:45rpx;
}
.card-box{
  width:75%;
  min-height:700rpx;
  background:#2b2f3a;
  margin:0px auto;
  margin-top:140rpx;
  border-radius:15rpx;
  padding:50rpx;
  padding-bottom:20rpx;
}
.card-box .alcohol-head{
  width:100%;
  min-height:150rpx;
  position: relative;
}
.alcohol-head image{
  width:500rpx;
  height:200rpx;
  position: absolute;
  top:-90rpx;
  left:0rpx;
}
.alcohol-head .card-type{
  width:200rpx;
  height:45rpx;
  line-height:45rpx;
  font-size:35rpx;
  color:#fff;
  position: absolute;
  top:50rpx;
  left:45%;
}
.card-title{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  font-size:37rpx;
  margin-bottom:50rpx;
  margin-top:20rpx;
}

.alcohol-items{
   width:100%;
   min-height:160rpx;
}

.detail-box {
  width:100%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
}

.detail-box image {
  width: 25rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.alcohol-date {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #a2a8ba;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
  padding-left:40rpx;
}
.detail-box .alcohol-num{
  width:100rpx;
  flex: 1;
  text-align: center;
  display: block;
  
}
.detail-box .alcohol-title{
  min-width:300rpx;
}